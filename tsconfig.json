{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "@uni-helper/uni-app-types", "miniprogram-api-typings"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // 自动导入vue3包
    "typings/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "vueCompilerOptions": {
    "nativeTags": ["block", "component", "template", "slot"]
  }
}
